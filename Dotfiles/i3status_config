# i3status config file 

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ

# ~/.config/i3status/config

general {
        colors = true
        interval = 1
}

order += "path_exists VPN"
order += "wireless wlp3s0"
order += "ethernet eth0"
order += "disk /mnt/usb"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "volume master"
order += "battery 0"
order += "time"

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun-ipv4"
        format = " VPN "
}

wireless wlp3s0 {
        format_up = " W: %ip "
        format_down = " W: DOWN "
}

ethernet eth0 {
        format_up = " E: %ip " 
        format_down = " E: DOWN "
}

disk "/mnt/usb" {
        format = " F: %percentage_used USED of %total "
    	low_threshold = "20"
    	threshold_type = "percentage_free"
    	format_below_threshold = " F WARNING: %percentage_free FREE "
    	format_not_mounted = " F: NONE "
}

disk "/" {
        format = " S: %percentage_used USED of %total "
	    low_threshold = "20"
    	threshold_type = "percentage_free"
    	format_below_threshold = " S WARNING: %percentage_free FREE "
}

memory {
        format = " M: %percentage_used USED of %total "
        threshold_degraded = "20%"
        format_degraded = " M WARNING: %percentage_free FREE "
    	threshold_critical = "10%"
    	format_degraded = " M WARNING: %percentage_free FREE "
}

cpu_usage {
    	format = " P: %usage "
    	degraded_threshold = "80"
    	max_threshold = "90"
}

cpu_temperature 0 {
    	format = " P: %degreesC "
    	path = "/sys/class/hwmon/hwmon*/temp1_input"
    	max_threshold = "60"
}

volume master {
        format = " V: %volume "
        format_muted = " V: MUTED (%volume) "
        device = "pulse"
}

time {
        format = " %H:%M %m-%d-%y "
}


battery 0 {
        format = " B: %percentage "
        format_down = "B: NONE "
        path = "/sys/class/power_supply/BAT1/uevent"
        last_full_capacity = true
        integer_battery_capacity = true 
        low_threshold = 20
        threshold_type = percentage
}
